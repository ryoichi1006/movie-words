.past
  = render "logo"
  .past-main
    .past-content
      .mypost
        %i.fas.fa-smile
        MY POSTS
        = link_to new_post_path , data: {"turbolinks" => false} do
          %i.fas.fa-pen-nib
            投稿する
        .past-posts
          - @past.each do |past|
            = link_to post_path(past), class: "posts-posts" do
              .past-posts-post
                = image_tag("#{past.image.url}", size: '400x270', class: "pasts-img")
                .past-post-words
                  = past.words
    = link_to "/" do
      .my-top
        %label.go-top
          << TOPへ戻る